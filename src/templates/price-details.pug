---
title: Predict | Price Details
---
extends layouts/_layout
block content
	.page
		+sidebar('', '', 'active')
		.page__content
			+header('header_border')
			.page__row
				.page__col
					.details
						.details__container
							.details__top
								.details__head
									.details__info Bitcoin Will the Lockdown in Germany be over by 31.10.2020?
								.details__btns
									button.details__btn.btn.btn_border
										+i('share')
										span.btn__text Share
									button.details__btn.btn.btn_border
										+i('star-fill')
										span.btn__text Watchlist
							.details__chart
								div#chart-price
							.details__list
								.details__box
									.details__icon
										img(src="img/bitcoin-blue.svg" alt="")
									.details__inner
										.details__category Outcome
											+i('info-circle')
										.details__price.color-green Yes									
								.details__box
									.details__icon
										img(src="img/market-blue.svg" alt="")
									.details__inner
										.details__category The Total Payout was:
											+i('info-circle')
										.details__price 50,553 USD
								.details__box
									.details__icon
										img(src="img/analytics-blue.svg" alt="")
									.details__inner
										.details__category The Event was settled on:
											+i('info-circle')
										.details__price 16:42:22 07/06/2021
								.details__box
									.details__icon
										img(src="img/coins-blue.svg" alt="")
									.details__inner
										.details__category The Event was created on:
											+i('info-circle')
										.details__price 12:52:22 07/06/2020
							button.details__btn.btn.btn_blue.btn_wide.btn_big.btn_red Dispute Event outcome
				.page__col
					.card
						.card__head.card__head_mb32
							.card__title.h6 Related Coins
							+dropdown('Related Coins', 'Top Gainers', 'Top Loosers', 'Stable Coins')
						.widgets
							.widgets__wrap
								mixin widgetsBox(img, category, info, status, price, idName)
									.widgets__box
										.widgets__top
											.widgets__company
												.widgets__logo
													img(src=img alt="")
												.widgets__details
													.widgets__category=category 
													.widgets__info=info 
											.widgets__group
												if status
													.status.positive +2.05%
												else
													.status.negative -2.73%
												.widgets__price=price 
										.widgets__chart
											div(id=idName)
										button.widgets__favorite
											+i('star')
								+widgetsBox('img/logo/ethereum.png', 'Ethereum', 'ETH', true, '18,245.4 USD', 'spark-1')
								+widgetsBox('img/logo/ripple.png', 'Ripple', 'XRP', false, '0.56687654', 'spark-5')
								+widgetsBox('img/logo/ubex.png', 'Ubex', 'UBW', true, '6,315.4 USD', 'spark-3')
								+widgetsBox('img/logo/steem.png', 'Steem', 'STM', true, '18,245.4 USD', 'spark-2')
								+widgetsBox('img/logo/tokenbox.png', 'Tokenbox', 'TBX', true, '0.56687654', 'spark-4')
		