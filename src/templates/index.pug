---
title: Predict | Prices
---
extends layouts/_layout
block content
	.page
		+sidebar('active')
		.page__content
			+header
			.page__container
				.search
					.search__container
						.search__wrap
							.search__title.h4 Search markets
							.search__info Easily find the predicitons that matter to you!
						form.search__form
							input.search__input(type="text" placeholder="Search")
							button.search__btn
								+i('search')
						.search__preview
							img(src="img/figures-2.png" alt="")
				.categories
					.categories__title.h5.mobile-hide Categories
					.categories__select.mobile-show
						select.select
							option Trending Predictions
							option Covid
							option Political
							option Sports
							option Crypto
					.categories__container
						.categories__slider.js-slider-categories.owl-carousel
							a.categories__item(href="#")
								.categories__preview.bg-green-gradient
									img(src="img/money-time.svg" alt="")
								.categories__text Trending Predictions
							a.categories__item(href="#")
								.categories__preview.bg-pink-gradient
									img(src="img/boxing-glove.svg" alt="")
								.categories__text Covid
							a.categories__item(href="#")
								.categories__preview.bg-purple-gradient
									img(src="img/money-bag-fill.svg" alt="")
								.categories__text Political
							a.categories__item(href="#")
								.categories__preview.bg-blue-gradient
									img(src="img/savings.svg" alt="")
								.categories__text Sports
							a.categories__item(href="#")
								.categories__preview.bg-orange-gradient
									img(src="img/spaceship.svg" alt="")
								.categories__text Crypto
							a.categories__item(href="#")
								.categories__preview.bg-pink-gradient
									img(src="img/money-time.svg" alt="")
								.categories__text Recently Added
							a.categories__item(href="#")
								.categories__preview.bg-purple-gradient
									img(src="img/money-bag-fill.svg" alt="")
								.categories__text Ending Soon
				.prices
					.prices__head
						.prices__title.h5 Popular Markets
						select.select.select_empty
							option Most Recent
							option Highest Liquidity
							option Highest Volume
							option Recently Created
							option Ending Soon
							option Highest Interest
					.prices__container
						.prices__table
							.prices__row.prices__row_head
								.prices__cell Favourites
								.prices__cell Description
								.prices__cell Total Volume
								.prices__cell Yes
								.prices__cell No
								.prices__cell 
							mixin pricesRow(src, text, status, idName)
								a.prices__row(href="price-details.html")
									.prices__cell
										button.favorite 
									.prices__cell Will the Lockdown in Germany be over by 31.05.2021?
									.prices__cell $1,352
									.prices__cell.color-green 2000 EUR
									.prices__cell.color-red 2000 EUR
									.prices__cell
										button.prices__btn.btn.btn_blue Trade Now
							+pricesRow('img/logo/bitcoin.png', 'Bitcoin', true, 'spark-1')
							+pricesRow('img/logo/ethereum.png', 'Ethereum', false, 'spark-5')
							+pricesRow('img/logo/steem.png', 'Steem', true, 'spark-2')
							+pricesRow('img/logo/ripple.png', 'Ripple', true, 'spark-3') 
							+pricesRow('img/logo/tokenbox.png', 'Tokenbox', true, 'spark-4')
							+pricesRow('img/logo/ubex.png', 'Ubex', true, 'spark-6') 
					.prices__btns
						button.prices__btn.btn.btn_blue Show more events


